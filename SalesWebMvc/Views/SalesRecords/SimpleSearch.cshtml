@model IEnumerable<SalesWebMvc.Models.SalesRecord>

@{
    ViewData["Title"] = "Simple Search";
}
<h1>@ViewData["Title"]</h1>

<nav class="navbar navbar-expand-lg bg-primary">
    <div class="container-fluid">
        <form class="d-flex align-items-center flex-wrap" role="search">
            <div class="d-flex align-items-center me-2">
                <label for="minDate" class="form-label mb-0 me-2 text-light">Min Date:</label>
                <input type="date" class="form-control me-2" name="minDate" value="@ViewData["minDate"]">
            </div>
            <div class="d-flex align-items-center me-2">
                <label for="maxDate" class="form-label mb-0 me-2 text-light">Max Date:</label>
                <input type="date" class="form-control me-2" name="maxDate" value="@ViewData["maxDate"]">
            </div>
            <button type="submit" class="btn btn-secondary">Filter</button>
        </form>
    </div>
</nav>
 <div class="container mt-4">
     <div class="card">
        <div class="card-header bg-secondary">
            <h3 class="card-title text-light fs-5">Total sales = @Model.Sum(obj => obj.Amount).ToString("F2")</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="table-primary">
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Seller)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Seller.Department)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Seller.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Seller.Department.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
     </div>
</div>
